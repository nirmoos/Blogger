<nav class="navbar navbar-expand-lg navbar-light bg-light custom-navbar">
  <a class="navbar-brand website-name" href="<%= root_path %>">Blogger</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class='search-container'>
      <input type='text' placeholder='Search..' name='search' onblur="" onkeyup='onSearchButtonClick()'>
      <span class='search-icon'><i class="fa fa-search"></i></span>
      <div class='search-results' id='search-results'></div>
    </div>

    <ul class="navbar-nav mr-auto navbar-ul-li">
      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>">
          <div>
            Home
          </div>
        </a>
      </li>
      <li class="nav-item">
          <a class="nav-link" href="<%= user_path(current_user) %>">
            <div>
            <%= user_avatar(current_user.id) %>
            <%= current_user.firstname %>
          </div>
          </a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <div>
            <i class="fas fa-rss-square"></i>
          </div>
        </a>
        <div class="dropdown-menu feed-menu feed-wrapper" id="feed-wrapper" aria-labelledby="navbarDropdown">
          <div class="dropdown-item" data-feed="allfeed" id="all-feed" href="<%= allfeed_path %>">All Feed</div>
          <div class="dropdown-item" data-feed="personelfeed" id="personel-feed" href="<%= personelfeed_path %>">Personel Feed</div>
          <div class="dropdown-item" data-feed="myfeed" id="my-feed" href="<%= myfeed_path %>">My Feed</div>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <div>
            <i class="fas fa-cog"></i>
          </div>
        </a>
        <div class="dropdown-menu feed-menu" aria-labelledby="accountDropdown">
          <%= link_to('Delete Account', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item') %>
          <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item') %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="showDraftedArticles" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <div>
            <i class="fas fa-envelope-open"></i>
          </div>
        </a>
        <div class="dropdown-menu feed-menu" aria-labelledby="showDraftedArticles" id="show-drafted-articles">
          <% @drafted_articles.each do | article | %>
            <%= link_to article.title, article_path(article), class: "dropdown-item", onclick: "showDraftedArticles(event)" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</nav>
